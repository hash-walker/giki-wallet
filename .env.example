# Environment Configuration - COPY THIS TO .env AND FILL IN SECURE VALUES
# DO NOT commit .env file to git - only .env.example

PORT=8080
ENV=production

# PostgreSQL - CHANGE THESE TO STRONG PASSWORDS IN PRODUCTION
DB_HOST=db
DB_PORT=5432
DB_USER=giki_user_prod
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_MIN_32_CHARS
DB_NAME=giki_wallet_db
DB_SSL_MODE=require
DB_URL=postgres://giki_user_prod:CHANGE_ME_TO_STRONG_PASSWORD_MIN_32_CHARS@db:5432/giki_wallet_db?sslmode=require

# Microsoft Graph API Configuration - Get from Azure Portal
MS_GRAPH_CLIENT_ID=YOUR_CLIENT_ID_HERE
MS_GRAPH_CLIENT_SECRET=YOUR_CLIENT_SECRET_HERE
MS_GRAPH_TENANT_ID=YOUR_TENANT_ID_HERE
MS_GRAPH_SENDER_EMAIL=transport@giki.edu.pk

# JWT Token Secret - Generate with: openssl rand -hex 32
TOKEN_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# JazzCash Production Payment Gateway Configuration
# Get credentials from JazzCash merchant dashboard
JAZZCASH_MERCHANT_ID=YOUR_MERCHANT_ID
JAZZCASH_PASSWORD=YOUR_JAZZCASH_PASSWORD
JAZZCASH_INTEGRITY_SALT=YOUR_INTEGRITY_SALT
JAZZCASH_MERCHANT_MPIN=YOUR_MPIN
JAZZCASH_RETURN_URL=https://giktransport.giki.edu.pk/booking/payment/response/
JAZZCASH_IS_TEST=False

# Base URL
JAZZCASH_BASE_URL=https://payments.jazzcash.com.pk

# API Endpoints (relative paths)
JAZZCASH_WALLET_PAYMENT_URL=ApplicationAPI/API/2.0/Purchase/DoMWalletTransaction
JAZZCASH_STATUS_INQUIRY_URL=ApplicationAPI/API/PaymentInquiry/Inquire
JAZZCASH_CARD_PAYMENT_URL=CustomerPortal/transactionmanagement/merchantform/
JAZZCASH_WALLET_REFUND_URL=ApplicationAPI/API/Purchase/domwalletrefundtransaction
JAZZCASH_CARD_REFUND_URL=ApplicationAPI/API/authorize/Refund

# Nginx configuration
NGINX_PORT=80
NGINX_SSL_PORT=443

# Frontend API URL
VITE_API_URL=/api
